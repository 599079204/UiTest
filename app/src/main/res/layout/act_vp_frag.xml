<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ljw.uitest.main.MainActivity">

    <!-- viewpager标题 -->
    <com.ljw.uitest.customView.PagerSlidingTabStrip
        android:id="@+id/vp_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        app:cursor_align_text="true"
        app:cursor_round_corner="true"
        app:indicator_color="#f64a4c"
        app:indicator_height="2dp"
        app:max_line_width="20dp"
        app:max_match_size="5"
        app:selected_tab_text_color="#f64a4c"
        app:should_match_width="true"
        app:tab_padding_left_right="14dp"
        app:tab_text_color="#555"
        app:tab_text_size="14sp"
        app:underline_height="2dp" />

    <!-- viewpager 内容 -->
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
